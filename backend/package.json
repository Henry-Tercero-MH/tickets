{
  "name": "zebra-print-server",
  "version": "1.0.0",
  "description": "Servidor backend para imprimir etiquetas Zebra sin Browser Print",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-exe": "pkg . --targets node18-win-x64 --output ../zebra-server.exe",
    "build-nexe": "npx nexe server.js -t windows-x64-18.0.0 -o ../zebra-server-nexe.exe"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "../dist/**/*",
      "print.bat"
    ]
  }
}
